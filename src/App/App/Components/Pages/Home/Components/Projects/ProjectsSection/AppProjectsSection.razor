@namespace App.Components.Pages.Home.Components
@inject IAppProjectsSectionViewModel ViewModel

<section class="section fade-in" id="projects" >
    <h2 class="section-heading">Featured Projects</h2>
    <div class="card-container">
        @foreach (var project in FeaturedProjects)
        {
            <AppProjectCard ProjectDefinition="project"/>
        }
    </div>
</section>

@code {

    private ProjectDefinition[] FeaturedProjects { get; set; } = [];

    protected override void OnInitialized()
    {
        FeaturedProjects = ViewModel.GetFeaturedProjects();
    }
}
