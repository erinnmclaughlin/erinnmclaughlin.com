@using App.Blog
@namespace App.Home.Components

<AppRecentBlogPosts>
    @if (context?.Count > 0)
    {
        <section class="section fade-in" id="blog">
            <h2 class="section-heading">Recent Blog Posts</h2>
            @foreach (var post in context)
            {
                <div class="blog-post">
                    <h3 class="blog-post-title">
                        <a href="">@post.Title</a>
                    </h3>
                    <p class="blog-post-preview">@post.ContentPreview</p>
                </div>
            }
        </section>
    }
</AppRecentBlogPosts>
